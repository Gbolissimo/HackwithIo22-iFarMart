<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSecondaryVariant"
    android:fitsSystemWindows="true">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:fitsSystemWindows="true">



        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/Theme.IFarMart.PopupOverlay" />



    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/colorSecondaryVariant"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">



        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_gravity="left"
            android:gravity="left"
            android:layout_width="match_parent"
            android:background="?attr/colorSecondaryVariant"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <RelativeLayout
                android:visibility="gone"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/colorSecondaryVariant"
                >
                <TextView
                    android:visibility="gone"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/product_font_family"
                    android:id="@+id/dkm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/colorOnPrimary"
                    android:text="Dark Mode "
                    android:gravity="left"
                    android:layout_alignParentLeft="true"
                    android:textSize="18dp"
                    />


                <Switch
                    android:visibility="gone"
                    android:layout_alignParentRight="true"
                    android:textSize="20dp"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:id="@+id/switch1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    />

            </RelativeLayout>

            <View
android:visibility="gone"
                android:layout_below="@+id/aname"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/linecolor2" />

            <RelativeLayout
                android:visibility="gone"
                android:background="?attr/colorSecondaryVariant"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:visibility="gone"
                    android:fontFamily="@font/product_font_family"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/colorOnPrimary"
                    android:text="Push Notifications"
                    android:gravity="left"
                    android:layout_alignParentLeft="true"
                    android:textSize="18dp"
                    />


                <Switch
                    android:visibility="gone"
                    android:layout_alignParentRight="true"
                    android:textSize="20dp"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:id="@+id/switch2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    />
            </RelativeLayout>
            <View
android:visibility="gone"
                android:layout_below="@+id/aname"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/linecolor2" />

            <RelativeLayout
                android:visibility="gone"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/colorSecondaryVariant"
                >
                <TextView
                    android:fontFamily="@font/product_font_family"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/colorOnPrimary"
                    android:text="Open Links in External Browsers"
                    android:gravity="left"
                    android:layout_alignParentLeft="true"
                    android:textSize="18dp"
                    />


                <Switch
                    android:layout_alignParentRight="true"
                    android:textSize="20dp"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:id="@+id/switch3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    />
            </RelativeLayout>
            <View
                android:visibility="gone"
                android:layout_below="@+id/aname"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/linecolor2" />
            <TextView
                android:fontFamily="@font/product_font_family"
                android:id="@+id/privacy"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?attr/colorOnPrimary"
                android:text="Privacy Policy"
                android:textSize="18dp"
                />
            <View


                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/linecolor2" />

            <TextView
                android:fontFamily="@font/product_font_family"
                android:id="@+id/app_info"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?attr/colorOnPrimary"
                android:text="App Info"
                android:textSize="18dp"
                />
            <View


                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/linecolor2" />

            <TextView
                android:fontFamily="@font/product_font_family"
                android:id="@+id/share"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?attr/colorOnPrimary"
                android:text="Share"
                android:textSize="18dp"
                />
            <View


                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/linecolor2" />

            <ImageView
android:visibility="gone"
                android:layout_gravity="center_horizontal"
                android:id="@+id/adm_login"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:padding="16dp"
                android:src="@drawable/ic_adm" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>




</androidx.coordinatorlayout.widget.CoordinatorLayout>



