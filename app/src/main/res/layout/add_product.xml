<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimary"
    android:fitsSystemWindows="true">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:fitsSystemWindows="true">



        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/Theme.IFarMart.PopupOverlay" />



    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/colorPrimary"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="?attr/colorPrimary"
            >


            <ImageView
                android:layout_marginTop="20dp"
                android:layout_width="150dp"
                android:layout_gravity="center"
                android:id="@+id/up_image"
                android:layout_height="150dp"
                android:src="@drawable/placeholder"/>
            <TextView
                android:id="@+id/up_bt"
                android:textColor="?attr/colorOnPrimary"
                android:textSize="15sp"
                android:text="Select Product Image Here"
                android:fontFamily="@font/product_font_family"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText

                android:id="@+id/p_name"

                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:textSize="16dp"
                android:layout_marginBottom="30dp"
                android:hint="Product Name:"
                android:fontFamily="@font/product_font_family"/>



            <EditText
                android:id="@+id/p_q"
                android:fontFamily="@font/product_font_family"
                android:layout_marginRight="10dp"
                android:textSize="16dp"
                android:layout_marginBottom="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:hint="Product Description/Quantity" />


            <EditText
                android:id="@+id/p_fa"
                android:fontFamily="@font/product_font_family"
                android:layout_marginRight="10dp"
                android:textSize="16dp"

                android:layout_marginBottom="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:hint="Farm/Store Address" />

            <EditText
                android:id="@+id/p_p"
                android:fontFamily="@font/product_font_family"
                android:layout_marginRight="10dp"
                android:textSize="16dp"

                android:layout_marginBottom="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:hint="Price Range" />

            <EditText

                android:id="@+id/p_c1"
                android:fontFamily="@font/product_font_family"
                android:layout_marginRight="10dp"
                android:textSize="16dp"
                android:layout_marginBottom="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:hint="Seller's Contact Number 1" />

            <EditText

                android:id="@+id/p_c2"
                android:fontFamily="@font/product_font_family"
                android:layout_marginRight="10dp"
                android:textSize="16dp"
                android:layout_marginBottom="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:hint="Seller's Contact Number 2" />

            <EditText
                android:visibility="gone"
                android:id="@+id/p_base64"
                android:fontFamily="@font/product_font_family"
                android:layout_marginRight="10dp"
                android:textSize="16dp"
                android:layout_marginBottom="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />


            <TextView
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:textAlignment="center"
                android:fontFamily="@font/product_font_family"
                android:id="@+id/post_product"
                android:text="POST"
                android:textSize="15dp"
                android:layout_marginTop="30dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/backgroundbutton2"
                android:layout_gravity="center_horizontal"
                android:layout_width="200dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>




</androidx.coordinatorlayout.widget.CoordinatorLayout>



